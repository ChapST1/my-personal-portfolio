---
import { siteConfig } from "../../public/data/site-config";
import Paragraph from "./ui/Paragraph.astro";

const { ownerInfo, ownerOccupation, cvLink } = siteConfig;
---

<section class="py-3">
  <div class="flex flex-col gap-6">
    <div>
      <h1 class="font-semibold text-3xl py-2 text-dark-100">
        {ownerOccupation}
      </h1>
      <Paragraph>
        {ownerInfo}
      </Paragraph>
    </div>

    <a
      href={cvLink}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-dark-800 w-max py-2 font-extralight text-sm hover:bg-dark-900 duration-300 px-4 border border-dark-700 rounded-md"
      >Descargar cv</a
    >
  </div>
</section>
